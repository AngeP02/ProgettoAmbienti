<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Contenitore principale -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Schermata home -->

        <!-- Barra di navigazione -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Quadrati con le informazioni -->

                <!-- Numero di passi -->

                <!-- Posizione attuale -->
                <TextView
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:text="Numero di passi"
                    android:textSize="18sp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="252dp"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_gray_background"
                    android:padding="16dp">

                    <!-- Contenuto del layout -->

                </RelativeLayout>

                <!-- <androidx.cardview.widget.CardView
                     android:layout_width="match_parent"
                     android:layout_height="252dp"
                     android:layout_margin="8dp"
                     android:cardBackgroundColor="@color/gray"
                     android:cardCornerRadius="16dp"
                     android:cardElevation="0dp"
                     android:foreground="?attr/selectableItemBackground"
                     android:padding="16dp">

                 </androidx.cardview.widget.CardView> -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posizione attuale"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="336dp"
                    android:layout_margin="8dp"
                    android:background="@color/gray"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:radius="16dp">

                </androidx.cardview.widget.CardView>

                <!-- Status delle medicine -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status delle medicine"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="286dp"
                    android:layout_margin="8dp"
                    android:background="@color/gray"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:radius="16dp">

                </androidx.cardview.widget.CardView>

                <!-- Mappatura degli spostamenti -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mappatura degli spostamenti"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="388dp"
                    android:layout_margin="8dp"
                    android:background="@color/gray"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:radius="16dp">

                </androidx.cardview.widget.CardView>

                <!-- Notifiche non lette -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="462dp"
                    android:layout_margin="8dp"
                    android:background="@color/gray"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="16dp"
                    android:radius="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifiche non lette"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCCCCC"
            android:orientation="horizontal">

            <!-- Sezione Home -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="Home"
                android:textColor="#333333"
                android:textSize="16sp" />

            <!-- Altre sezioni simili -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="Medicine"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="Riepilogo"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="Notifiche"
                android:textColor="#333333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:padding="16dp"
                android:text="Profilo"
                android:textColor="#333333"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
